{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": ".",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "."
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "."
            },
            "problemMatcher": "$msCompile"
        }
    ]
}